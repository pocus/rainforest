<h1>Products#index</h1>

<p>
<%= link_to "new product", new_product_path %>
</p>

<p>
<%= link_to "new user", new_user_path %>
</p>


<ul>

	<% @products.each do |p| %>
	<p>
		<li><%= link_to p.name, product_path(p) %></li>
		<li><%= p.description %></li>
		<li>$<%= p.formatted_price %></li>
		<li><%= link_to "edit", edit_product_path(p) %>
	</p>
	<% end %>

</ul>